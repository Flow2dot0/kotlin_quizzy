<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="colorPrimary">@color/themeColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@color/themeColor</item>
        <item name="android:textColor">@color/textColorButton</item>
        <item name="android:textColorSecondary">@color/textColorButton</item>
        <item name="android:dialogCornerRadius">10dp</item>
        <item name="android:padding">3dp</item>
    </style>

</resources>
