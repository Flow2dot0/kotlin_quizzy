<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/brain"
        android:layout_marginTop="10dp"
        android:contentDescription="A brain logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_rounded_primary"
        android:text="Play"
        android:textColor="@color/textColorButton"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <Button
        android:id="@+id/questionsButton"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_rounded_secondary"
        android:text="Questions"
        android:textColor="@color/textColorButton"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/scoresButton"
        app:layout_constraintEnd_toEndOf="@+id/playButton"
        app:layout_constraintStart_toStartOf="@+id/playButton"
        app:layout_constraintTop_toBottomOf="@+id/playButton"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/scoresButton"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_rounded_secondary"
        android:text="Scores"
        android:textColor="@color/textColorButton"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/aboutButton"
        app:layout_constraintEnd_toEndOf="@+id/questionsButton"
        app:layout_constraintStart_toStartOf="@+id/questionsButton"
        app:layout_constraintTop_toBottomOf="@+id/questionsButton" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/btn_rounded_secondary"
        android:text="About"
        android:textColor="@color/textColorButton"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/scoresButton"
        app:layout_constraintStart_toStartOf="@+id/scoresButton"
        app:layout_constraintTop_toBottomOf="@+id/scoresButton" />


</androidx.constraintlayout.widget.ConstraintLayout>